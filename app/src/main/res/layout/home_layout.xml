<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/home_layout_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/normal_background"
              android:orientation="vertical">

    <include layout="@layout/tool_bar_shared"
             android:id="@+id/include"/>

    <FrameLayout
        android:id="@+id/fl_fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include"/>


    <cn.xiaoniaojun.bottomnavigationbar.BottomNavigationBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>